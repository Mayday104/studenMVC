@{
}


<div class="modal fade" id="modalAdd" tabindex="-1" role="dialog" aria-labelledby="modalAdd" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalAdd">Registrando Estudiante</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
            <div class="form-group">
                <label for="NombreAdd">Nombre</label>
                <input type="text" class="form-control" id="NombreAdd">    
           </div>

           <div class="form-group">
                <label for="ApellidoAdd">Apellido</label>
                <input type="text" class="form-control" id="ApellidoAdd">    
           </div>

        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        <button type="button" class="btn btn-success" onclick="inserStudent()">Guardar</button>
      </div>
    </div>
  </div>
</div>

<button class="btn btn-success" data-toggle="modal" data-target="#modalAdd" type="button">Agregar Estudiante</button>
<hr />

<table id="student" class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th width="200"></th>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>



@section Scripts{
    <script src="~/js/student.js"></script>
}